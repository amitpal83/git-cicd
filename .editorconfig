# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{java,kt}]
indent_size = 4

[*.{py}]
indent_size = 4

[*.{rb}]
indent_size = 2

[*.{go}]
indent_style = tab
indent_size = 4

[*.{php}]
indent_size = 4

[*.{md}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab